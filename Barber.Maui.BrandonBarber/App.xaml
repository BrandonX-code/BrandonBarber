<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Barber.Maui.BrandonBarber"
             x:Class="Barber.Maui.BrandonBarber.App"  xmlns:converters="clr-namespace:Barber.Maui.BrandonBarber.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:EstadoColorConverter x:Key="EstadoColorConverter" />
            <converters:DisponibilidadColorConverter x:Key="DisponibilidadColorConverter" />
            <converters:LessThanConverter x:Key="LessThanConverter" />
            <converters:ServicioVisibleConverter x:Key="ServicioVisibleConverter" />
            <converters:EstadoPendienteConverter x:Key="EstadoPendienteConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:EstadoAceptadaConverter x:Key="EstadoAceptadaConverter" />
            <!-- ✅ NUEVO CONVERTIDOR PARA PERMITIR ELIMINAR TODOS EXCEPTO FINALIZADA -->
            <converters:EstadoEliminableConverter x:Key="EstadoEliminableConverter" />
            <!-- ✅ CONVERTIDOR PARA VALIDAR SI PUEDE ELIMINAR (PENDIENTE + >24 HORAS) -->
            <converters:PuedeEliminarCitaConverter x:Key="PuedeEliminarCitaConverter" />
            <!-- ✅ CONVERTIDOR PARA VALIDAR SI PUEDE EDITAR (PENDIENTE + >24 HORAS) -->
            <converters:PuedeEditarCitaConverter x:Key="PuedeEditarCitaConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
