<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barber.Maui.BrandonBarber.Pages.GestionarDisponibilidadPage">

    <Grid BackgroundColor="#0E2A36">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" BackgroundColor="#0E2A36" Padding="10,30"  HorizontalOptions="Center">
            <Label Text="Gestionar Disponibilidad" FontSize="20" TextColor="White" FontAttributes="Bold" />
        </Grid>

        <!-- Content -->
        <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never" Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- Calendario -->
                <Border BackgroundColor="#90A4AE" StrokeShape="RoundRectangle 10" Padding="15">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Selecciona fecha" TextColor="Black" FontSize="18" />
                        <DatePicker x:Name="FechaSelector" Format="D" TextColor="Black" MinimumDate="{Binding MinimumDate}" DateSelected="OnDateSelected" />
                    </VerticalStackLayout>
                </Border>

                <!-- Horarios Disponibles -->
                <Border BackgroundColor="#90A4AE" StrokeShape="RoundRectangle 10" Padding="15">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Horarios Disponibles" TextColor="Black" FontSize="18" />
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                            <Label Text="Horario" TextColor="Black" FontAttributes="Bold" Grid.Column="0" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Start"/>
                            <Label Text="Disponible" TextColor="Black" FontAttributes="Bold" Grid.Column="1" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center"/>

                            <Label Text="6:00 AM - 12:00 PM" TextColor="Black" Grid.Column="0" Grid.Row="1" VerticalOptions="Center"/>
                            <CheckBox x:Name="Horario6a12" Grid.Column="1" Grid.Row="1" Color="Black" CheckedChanged="OnHorarioCheckedChanged" HorizontalOptions="Center" VerticalOptions="Center"/>

                            <Label Text="12:00 PM - 03:00 PM" TextColor="Black" Grid.Column="0" Grid.Row="2" VerticalOptions="Center"/>
                            <CheckBox x:Name="Horario12a3" Grid.Column="1" Grid.Row="2" Color="Black" CheckedChanged="OnHorarioCheckedChanged" HorizontalOptions="Center" VerticalOptions="Center"/>

                            <Label Text="03:00 PM - 05:00 PM" TextColor="Black" Grid.Column="0" Grid.Row="3" VerticalOptions="Center"/>
                            <CheckBox x:Name="Horario3a5" Grid.Column="1" Grid.Row="3" Color="Black" CheckedChanged="OnHorarioCheckedChanged" HorizontalOptions="Center" VerticalOptions="Center"/>

                            <Label Text="05:00 PM - 07:00 PM" TextColor="Black" Grid.Column="0" Grid.Row="4" VerticalOptions="Center"/>
                            <CheckBox x:Name="Horario5a7" Grid.Column="1" Grid.Row="4" Color="Black" CheckedChanged="OnHorarioCheckedChanged" HorizontalOptions="Center" VerticalOptions="Center"/>

                            <Label Text="07:00 PM - 08:00 PM" TextColor="Black" Grid.Column="0" Grid.Row="5" VerticalOptions="Center"/>
                            <CheckBox x:Name="Horario7a8" Grid.Column="1" Grid.Row="5" Color="Black" CheckedChanged="OnHorarioCheckedChanged" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Grid>

                    </VerticalStackLayout>
                </Border>
                <!-- DespuÃ©s del Border de "Horarios Disponibles" y antes del ScrollView de "Citas Existentes" -->
                <Border BackgroundColor="#90A4AE" StrokeShape="RoundRectangle 10" Padding="15">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Plantilla Semanal" TextColor="Black" FontSize="18" FontAttributes="Bold"/>

                        <Button Text="Configurar Plantilla Semanal" 
                BackgroundColor="#0E2A36" 
                TextColor="White" 
                CornerRadius="10" 
                Clicked="OnConfigurarPlantillaClicked"/>

                        <Button Text="Aplicar Plantilla al Mes" 
                BackgroundColor="#FF6F91" 
                TextColor="Black" 
                CornerRadius="10" 
                Clicked="OnAplicarPlantillaMesClicked"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Citas Existentes -->
                <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">
                    <Border BackgroundColor="#90A4AE" StrokeShape="RoundRectangle 10" Padding="15">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Citas Programadas" TextColor="Black" FontSize="18" />
                            <CollectionView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never" x:Name="CitasCollection" HeightRequest="260" HorizontalOptions="Center" EmptyView="No hay citas programadas para esta fecha.">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,5" BackgroundColor="#0E2A36" Padding="10" StrokeShape="RoundRectangle 10">
                                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                                <Label Text="{Binding Nombre}" TextColor="White" FontAttributes="Bold" Grid.Row="0" Grid.Column="0" />
                                                <Label Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy}'}" TextColor="White" Grid.Row="1" Grid.Column="0" />
                                                <Label Text="{Binding Fecha, StringFormat='{0:hh:mm tt}'}" FontSize="12" TextColor="White" Grid.Row="2" Grid.Column="0" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Border>
                </ScrollView>
            </VerticalStackLayout>
        </ScrollView>

        <HorizontalStackLayout Grid.Row="2" Padding="20" HorizontalOptions="Center">
            <Button Text="Guardar Disponibilidad"  BackgroundColor="#FF6F91" TextColor="Black" CornerRadius="10" Clicked="OnGuardarClicked" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>