<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barber.Maui.BrandonBarber.Pages.GestionarDisponibilidadPage"
             BackgroundColor="#0E2A36">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Label Grid.Row="0" 
               Text="Gestionar Horarios Semanales" 
               FontSize="24" 
               FontAttributes="Bold"
               TextColor="White" 
               HorizontalOptions="Center"
               Margin="20,40,20,20"/>

        <!-- Content -->
        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
            <VerticalStackLayout x:Name="DiasContainer" 
                               Padding="20" 
                               Spacing="15"/>
        </ScrollView>

        <!-- Botones -->
        <HorizontalStackLayout Grid.Row="2" 
                             Padding="20" 
                             Spacing="15"
                             HorizontalOptions="Center">
            <Button Text="Guardar y Aplicar" 
                    BackgroundColor="#FF6F91" 
                    TextColor="Black"
                    CornerRadius="15"
                    Clicked="OnGuardarClicked"
                    WidthRequest="200"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>