<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barber.Maui.BrandonBarber.Pages.SplashPage"
             BackgroundColor="#0E2A36"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

	<Grid VerticalOptions="Center" HorizontalOptions="Center">
        <VerticalStackLayout Spacing="30" HorizontalOptions="Center" VerticalOptions="Center">
            <Image x:Name="LogoImage" Source="logobarbergoblanco.png" WidthRequest="350" HeightRequest="350" HorizontalOptions="Center" Opacity="0" />
            <VerticalStackLayout Spacing="15" HorizontalOptions="Center" Margin="0,20,0,0">
				<ActivityIndicator x:Name="LoadingIndicator" IsRunning="True" Color="#FF6F91" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center" />
				<Label x:Name="LoadingLabel" Text="Cargando..."  FontSize="14" TextColor="#B0BEC5" HorizontalOptions="Center" Opacity="0" />
			</VerticalStackLayout>
		</VerticalStackLayout>
	</Grid>

</ContentPage>