<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barber.Maui.BrandonBarber.Pages.GaleriaPage"
             xmlns:controls="clr-namespace:Barber.Maui.BrandonBarber.Controls"
             BackgroundColor="#0E2A36">

    <Grid>
        <ScrollView>
            <Grid Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,10,0,20">
                    <Label Text="GalerÃ­a de Cortes" FontSize="24" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
                    <Label x:Name="InstruccionGaleriaLabel" Text="Selecciona la Imagen Para Verla Detalladamente" TextColor="#B0BEC5" FontSize="14" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <VerticalStackLayout x:Name="PickerSection" Grid.Row="1" Spacing="5" IsVisible="False">
                    <Label x:Name="SeleccionarBarberoLabel" Text="Seleccione el Barbero Para Ver Su Galeria" TextColor="White" FontSize="16" HorizontalOptions="Center"/>
                    <Border StrokeThickness="0" StrokeShape="RoundRectangle 16" BackgroundColor="#90A4AE" Margin="0,0,0,10">
                        <VerticalStackLayout Spacing="0">
                            <Border BackgroundColor="#184557" Padding="10" StrokeThickness="0" StrokeShape="RoundRectangle 16,16,0,0">
                                <Label Text="Barbero" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                            </Border>
                            <Grid Padding="15,12" ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                                <Border WidthRequest="70" HeightRequest="70" BackgroundColor="#E0F7FA" StrokeShape="RoundRectangle 50" StrokeThickness="0">
                                    <Image x:Name="BarberoFotoImage" Source="usericons.png" Aspect="AspectFill"/>
                                </Border>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0,0,0" VerticalOptions="Center">
                                    <Label x:Name="BarberoSelectedLabel" Text="Seleccionar Barbero" TextColor="Black" FontSize="18" FontAttributes="Bold"/>
                                    <Label x:Name="BarberoTelefonoLabel" Text="" TextColor="#333" FontSize="14"/>
                                </VerticalStackLayout>
                                <Button x:Name="BarberoSelectButton" Grid.Column="2" Text="Seleccionar" BackgroundColor="#0E2A36" TextColor="White" CornerRadius="10" FontAttributes="Bold" WidthRequest="120" HeightRequest="40" Clicked="OnBarberoPickerTapped"/>
                            </Grid>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>

                <ScrollView Grid.Row="2" Orientation="Vertical" VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">
                    <FlexLayout x:Name="GaleriaContainer" Direction="Row" Wrap="Wrap" JustifyContent="SpaceAround" AlignItems="Start" AlignContent="Start"/>
                </ScrollView>

                <VerticalStackLayout Grid.Row="3" Spacing="15" Margin="0,15,0,5">
                    <Button x:Name="AgregarImagenButton" Text="Agregar Imagen" Style="{StaticResource GaleriaButtonStyle}" Clicked="OnAgregarImagenClicked" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>

        <controls:LoadingControl x:Name="LoadingIndicator" IsVisible="False"/>
    </Grid>

</ContentPage>
