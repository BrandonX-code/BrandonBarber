<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barber.Maui.BrandonBarber.Pages.SolicitarAdminPage"
             BackgroundColor="#0E2A36">

    <ScrollView Padding="25">
        <VerticalStackLayout Spacing="20" VerticalOptions="Center">

            <Label Text="Solicitud de Cuenta de Administrador" 
                   FontSize="20" 
                   TextColor="White" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <VerticalStackLayout Spacing="15">

                <Border StrokeShape="RoundRectangle 10" BackgroundColor="#E0F7FA" HeightRequest="45" StrokeThickness="0">
                    <Entry x:Name="CedulaEntry" 
                           Placeholder="Cédula"
                           Keyboard="Numeric"
                           TextColor="#0E2A36"
                           Margin="10,0" MaxLength="10"/>
                </Border>

                <Border StrokeShape="RoundRectangle 10" BackgroundColor="#E0F7FA" HeightRequest="45" StrokeThickness="0">
                    <Entry x:Name="NombreEntry" 
                           Placeholder="Nombre completo"
                           TextColor="#0E2A36" Keyboard="Text"
                           Margin="10,0" MaxLength="50"/>
                </Border>

                <Border StrokeShape="RoundRectangle 10" BackgroundColor="#E0F7FA" HeightRequest="45" StrokeThickness="0">
                    <Entry x:Name="EmailEntry" 
                           Placeholder="Email"
                           Keyboard="Email"
                           TextColor="#0E2A36"
                           Margin="10,0" MaxLength="80"/>
                </Border>

                <Border StrokeShape="RoundRectangle 10" BackgroundColor="#E0F7FA" HeightRequest="45" StrokeThickness="0">
                    <Entry x:Name="TelefonoEntry" 
                           Placeholder="Teléfono"
                           Keyboard="Telephone"
                           TextColor="#0E2A36"
                           Margin="10,0" MaxLength="15"/>
                </Border>

                <Border StrokeShape="RoundRectangle 15" BackgroundColor="#E0F7FA" StrokeThickness="0">
                    <Editor x:Name="JustificacionEditor"
                            Placeholder="Justificación (¿Por qué necesitas una cuenta de administrador?)"
                            HeightRequest="140"
                            BackgroundColor="Transparent"
                            TextColor="#0E2A36"
                            Margin="10,5" MaxLength="300"/>
                </Border>

            </VerticalStackLayout>

            <Button Text="Enviar Solicitud"
                    BackgroundColor="#FF6F91"
                    TextColor="Black"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    Margin="0,10,0,0"
                    Clicked="OnEnviarSolicitudClicked"/>

            <ActivityIndicator x:Name="LoadingIndicator" 
                               IsRunning="False" 
                               IsVisible="False" 
                               Color="White"
                               Margin="0,10,0,0"/>
            <HorizontalStackLayout HorizontalOptions="Center" Margin="0,15,0,0">
                <Label Text="¿Ya tienes cuenta?" TextColor="#B0BEC5" FontSize="14"/>
                <Label Text=" Inicia sesión" TextColor="#FF6F91" FontAttributes="Bold" FontSize="14">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnVolverLoginClicked"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
