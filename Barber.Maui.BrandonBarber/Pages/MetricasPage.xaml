<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="Barber.Maui.BrandonBarber.Pages.MetricasPage"
             BackgroundColor="#0E2A36">

	<RefreshView x:Name="metricsRefreshView" Command="{Binding RefreshCommand}">
        <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">
			<VerticalStackLayout Spacing="10" Padding="16">
				<Grid>
                    <Label Text="Dashboard de Métricas" FontSize="32" TextColor="White"  FontAttributes="Bold"  HorizontalOptions="Center">
						<Label.Shadow>
							<Shadow Brush="#40000000" Offset="0,2" Radius="4" />
						</Label.Shadow>
					</Label>
				</Grid>
                <VerticalStackLayout x:Name="PickerSection" Spacing="5" IsVisible="False">
                    <Border BackgroundColor="#90A4AE" Padding="15" StrokeShape="RoundRectangle 12" StrokeThickness="0"  HeightRequest="100">
                        <Picker x:Name="BarberiaPicker"  SelectedIndexChanged="BarberiaPicker_SelectedIndexChanged"  ItemDisplayBinding="{Binding Nombre}"  Title="Seleccionar Barbería"  TitleColor="Black" TextColor="Black"  VerticalOptions="Center" />
                    </Border>
                </VerticalStackLayout>
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                    <Border Grid.Column="0" Grid.Row="0" BackgroundColor="#90A4AE" StrokeShape="12" Padding="16">
						<VerticalStackLayout>
                            <Label Text="Total Citas Hoy" TextColor="Black" FontSize="16"/>
							<Label x:Name="TotalCitasLabel" Text="0" TextColor="Black" FontSize="24" FontAttributes="Bold"/>
						</VerticalStackLayout>
					</Border>

                    <Border Grid.Column="1" Grid.Row="0" BackgroundColor="#90A4AE" StrokeShape="12" Padding="16">
						<VerticalStackLayout>
							<Label Text="Tasa de Asistencia" TextColor="Black" FontSize="16"/>
							<Label x:Name="TasaAsistenciaLabel" Text="0%" TextColor="Black" FontSize="24" FontAttributes="Bold"/>
						</VerticalStackLayout>
					</Border>
				</Grid>

                <Border BackgroundColor="#90A4AE" Padding="5" StrokeShape="16">
                    <VerticalStackLayout>
                        <Grid ColumnDefinitions="*,Auto" Padding="5">
                            <Label Text="Asistencia Mensual" VerticalOptions="Center" TextColor="Black" FontSize="20" FontAttributes="Bold"/>
                            <Picker x:Name="ChartTypePicker" Grid.Column="1" TextColor="Black" BackgroundColor="#90A4AE" SelectedIndexChanged="OnChartTypeChanged">
                                <Picker.Items>
                                    <x:String>Barras</x:String>
                                    <x:String>Líneas</x:String>
                                </Picker.Items>
                            </Picker>
                        </Grid>
                        <Border BackgroundColor="#0E2A36" Padding="0" StrokeShape="16">
                            <microcharts:ChartView x:Name="AsistenciaChart" Margin="0,10,0,-10" HeightRequest="220" BackgroundColor="Transparent" />
                        </Border>

                    </VerticalStackLayout>
                </Border>
                
                <Border BackgroundColor="#90A4AE" Padding="5" StrokeShape="16">
					<VerticalStackLayout>
						<Grid ColumnDefinitions="*,Auto" Padding="5">
                            <Label Text="Top Barberos" VerticalOptions="Center" TextColor="Black" FontSize="20"  FontAttributes="Bold"/>
                            <Picker x:Name="RankingChartTypePicker" Grid.Column="1" TextColor="Black" BackgroundColor="#90A4AE" SelectedIndexChanged="OnRankingChartTypeChanged">
								<Picker.Items>
									<x:String>Barras</x:String>
									<x:String>Líneas</x:String>
								</Picker.Items>
							</Picker>
						</Grid>
                        <Border BackgroundColor="#0E2A36" Padding="0" StrokeShape="16">
                            <microcharts:ChartView x:Name="RankingBarberosChart"  Margin="0,10,0,-10" HeightRequest="220" BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>
				</Border>

                <Border BackgroundColor="#90A4AE" Padding="16" StrokeShape="16">
					<VerticalStackLayout Spacing="10">
						<Label Text="Top Clientes Frecuentes" TextColor="Black" FontSize="20" FontAttributes="Bold"/>
                        <CollectionView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never" x:Name="ClientesFrecuentesCollection" HeightRequest="220">
							<CollectionView.ItemTemplate>
								<DataTemplate>
									<Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
										<Label Grid.Column="0" Text="{Binding Position}" TextColor="Black" FontSize="16" FontAttributes="Bold" Margin="0,0,10,0"/>
										<Label Grid.Column="1"  Text="{Binding Nombre}" TextColor="Black" FontSize="16"/>
										<HorizontalStackLayout Grid.Column="2" Spacing="5">
											<Label Text="{Binding Visitas}" TextColor="Black" FontSize="16" FontAttributes="Bold"/>
											<Label Text="visitas" TextColor="Black" FontSize="16"/>
										</HorizontalStackLayout>
									</Grid>
								</DataTemplate>
							</CollectionView.ItemTemplate>
						</CollectionView>
					</VerticalStackLayout>
				</Border>
			</VerticalStackLayout>
		</ScrollView>
	</RefreshView>
</ContentPage>