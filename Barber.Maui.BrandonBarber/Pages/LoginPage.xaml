<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barber.Maui.BrandonBarber.Pages.LoginPage"
             BackgroundColor="#0E2A36" Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             xmlns:controls="clr-namespace:Barber.Maui.BrandonBarber.Controls">

    <Grid>
        <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never" Padding="30">
            <VerticalStackLayout Spacing="10" VerticalOptions="Center">
                <Image Source="logobarbergoblanco.png" WidthRequest="350" HeightRequest="350" HorizontalOptions="Center" />

                <Label Text="Ingresa tus credenciales" FontSize="14" TextColor="White" HorizontalOptions="Center" />

                <Border BackgroundColor="#E0F7FA" StrokeShape="RoundRectangle 25" StrokeThickness="0"  Padding="0"  HorizontalOptions="Fill">
                    <Grid Padding="12,0" ColumnDefinitions="Auto, *" VerticalOptions="Center">
                        <Image Source="usericons.png"  WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
                        <Entry Grid.Column="1"  x:Name="EmailEntry" TextColor="#0E2A36" Placeholder="Usuario" PlaceholderColor="#90A4AE" FontSize="14" HeightRequest="45" BackgroundColor="Transparent" HorizontalOptions="Fill" VerticalOptions="Center" Keyboard="Email"/>
                    </Grid>
                </Border>
                <Border BackgroundColor="#E0F7FA" StrokeShape="RoundRectangle 25" StrokeThickness="0"  Padding="0"  HorizontalOptions="Fill">
                    <Grid Padding="12,0" ColumnDefinitions="Auto, *, Auto" VerticalOptions="Center">
                        <Image Source="lock.png"  WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
                        <Entry Grid.Column="1"  x:Name="PasswordEntry" TextColor="#0E2A36" Placeholder="Contraseña" PlaceholderColor="#90A4AE" FontSize="14" HeightRequest="45" BackgroundColor="Transparent" HorizontalOptions="Fill" VerticalOptions="Center" IsPassword="True"/>
                        <Image Grid.Column="2" x:Name="TogglePasswordIcon" Source="ojoabierto.png" WidthRequest="30" HeightRequest="30" VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnTogglePasswordClicked"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                </Border>

                <Label Text="¿Olvidaste tu contraseña?" TextColor="#FF6F91" FontSize="Body" FontAttributes="Bold" HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnForgotPasswordClicked" />
                    </Label.GestureRecognizers>
                </Label>

                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Text="Iniciar Sesión"  Style="{StaticResource LoginButtonStyle}" Clicked="OnLoginClicked" HorizontalOptions="Center"/>
                </Grid>
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="¿No tienes cuenta?" TextColor="#B0BEC5" FontSize="Body"/>
                    <Label Text=" Registrarse" TextColor="#FF6F91" FontSize="Body" FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRegistroClicked" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
                <BoxView HeightRequest="1" Color="#424E57" />
                <Border BackgroundColor="#28475C" StrokeShape="RoundRectangle 15" HorizontalOptions="Fill" Padding="15" StrokeThickness="0">
                    <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
                        <Label Text="¿Eres propietario o gerente de una barbería?" TextColor="White" FontSize="15" HorizontalOptions="Center" HorizontalTextAlignment="Center" />

                        <Button Text="Solicitar cuenta de administrador" TextColor="Black" HorizontalOptions="Fill" BackgroundColor="#FF6F91" CornerRadius="15" FontSize="14" FontAttributes="Bold" Clicked="OnSolicitarAdminClicked" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
        <controls:LoadingControl x:Name="LoadingIndicator" IsVisible="False"/>
    </Grid>
</ContentPage>