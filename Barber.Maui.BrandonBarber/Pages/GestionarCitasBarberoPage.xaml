<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barber.Maui.BrandonBarber.Pages.GestionarCitasBarberoPage"
             BackgroundColor="#0E2A36" xmlns:controls="clr-namespace:Barber.Maui.BrandonBarber.Controls" Grid.RowSpan="1">
    <Grid>

        <Grid RowDefinitions="Auto,*">
            <!-- ScrollView con CollectionView -->
            <Label Text="Gestionar Citas" FontSize="32" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10,0,20"/>
            <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
                <VerticalStackLayout Padding="16">
                    <CollectionView x:Name="CitasCollection">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15" Margin="0,0,0,10" BackgroundColor="#90A4AE" StrokeShape="RoundRectangle 15" StrokeThickness="0">
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*">
                                        <HorizontalStackLayout Spacing="5" Margin="0,5">
                                            <Image Grid.Column="0" Source="id.png" WidthRequest="20" HeightRequest="20" />
                                            <Label Grid.Column="1" LineBreakMode="WordWrap" Text="{Binding Nombre}" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Grid.Row="1" Spacing="5" Margin="0,5">
                                            <Image Source="call.png" WidthRequest="20" HeightRequest="20" />
                                            <Label Grid.ColumnSpan="2" Text="{Binding Telefono}" FontSize="15" TextColor="Black"/>
                                        </HorizontalStackLayout>

                                        <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2" Spacing="5" Margin="0,5">
                                            <Image Source="calendar.png" WidthRequest="20" HeightRequest="20"/>
                                            <Label Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy - hh:mm tt}'}" TextColor="Black"/>
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout IsVisible="{Binding ., Converter={StaticResource ServicioVisibleConverter}}" Grid.Row="3" Spacing="5" Margin="0,5">
                                            <Image Source="servicio.png" WidthRequest="20" HeightRequest="20" />
                                            <Label Text="Servicio: " FontSize="16" TextColor="Black" FontAttributes="Bold"/>
                                            <Label Text="{Binding ServicioNombre}" FontSize="16" TextColor="Black" LineBreakMode="WordWrap"/>
                                        </HorizontalStackLayout>

                                        <HorizontalStackLayout IsVisible="{Binding ., Converter={StaticResource ServicioVisibleConverter}}" Grid.Row="4" Spacing="5" Margin="0,5">
                                            <Image Source="precio.png" WidthRequest="20" HeightRequest="20" />
                                            <Label Text="Precio: " FontSize="16" TextColor="Black" FontAttributes="Bold"/>
                                            <Label Text="{Binding ServicioPrecio, StringFormat='${0:N0}'}" FontSize="15" TextColor="Black" />
                                        </HorizontalStackLayout>
                                        <Label Grid.Row="5" Grid.ColumnSpan="2" Text="{Binding Estado}" TextColor="Black" FontAttributes="Bold" Margin="0,5"/>
                                        <Button Grid.Row="6" Grid.Column="0" Text="Completada" CornerRadius="15" BackgroundColor="#FF6F91" TextColor="Black" Clicked="OnCompletadaClicked" CommandParameter="{Binding .}" Margin="0,5,5,5"/>
                                        <Button Grid.Row="6" Grid.Column="1" Text="Cancelada"  CornerRadius="15" BackgroundColor="#404040" TextColor="White" Clicked="OnCanceladaClicked" CommandParameter="{Binding .}" Margin="5,5,0,5"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>

            <!-- Mensaje cuando no hay citas -->
            <VerticalStackLayout x:Name="EmptyStateLayout" IsVisible="False" VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                <Image Source="calendarblanco.png" WidthRequest="80" HeightRequest="80" Opacity="0.6"/>
                <Label Text="No hay citas pendientes" FontSize="18" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
                <Label Text="Las citas por gestionar aparecerán aquí" FontSize="14" TextColor="#90A4AE" HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </Grid>
        <controls:LoadingControl x:Name="LoadingIndicator" IsVisible="False"/>
    </Grid>
</ContentPage>