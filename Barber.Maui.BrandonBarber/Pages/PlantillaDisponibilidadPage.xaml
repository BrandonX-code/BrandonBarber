<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barber.Maui.BrandonBarber.Pages.PlantillaDisponibilidadPage"
             BackgroundColor="#0E2A36" xmlns:controls="clr-namespace:Barber.Maui.BrandonBarber.Controls" Grid.RowSpan="1">
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Padding="10,30" HorizontalOptions="Center">
                <Label Text="Plantilla Semanal" FontSize="20" TextColor="White" FontAttributes="Bold" />
            </Grid>
            <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
                <VerticalStackLayout Padding="20" Spacing="15" x:Name="DiasContainer"/>
            </ScrollView>
            <HorizontalStackLayout Grid.Row="2" Padding="20" HorizontalOptions="Center">
                <Button Text="Guardar Plantilla" BackgroundColor="#FF6F91" TextColor="Black" CornerRadius="15" Clicked="OnGuardarPlantillaClicked" />
            </HorizontalStackLayout>
        </Grid>
        <controls:LoadingControl x:Name="LoadingIndicator" IsVisible="False"/>
    </Grid>
</ContentPage>