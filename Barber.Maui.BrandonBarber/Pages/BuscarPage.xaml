<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Barber.Maui.BrandonBarber.Pages.BuscarPage" Background="#0E2A36" xmlns:controls="clr-namespace:Barber.Maui.BrandonBarber.Controls" Grid.RowSpan="1">
    <Grid>
        <Grid RowDefinitions="Auto,*">
            <!-- Tabs de Estado -->
            <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
                <HorizontalStackLayout Grid.Row="0" Padding="10" Spacing="10" HorizontalOptions="Center">
                    <Button x:Name="BtnPendientes" Text="Pendientes" Clicked="OnPendientesClicked" BackgroundColor="#FF6F91" TextColor="Black" CornerRadius="15" Padding="20,10"/>
                    <Button x:Name="BtnCompletadas" Text="Confirmadas" Clicked="OnCompletadasClicked" BackgroundColor="#90A4AE" TextColor="Black" CornerRadius="15" Padding="20,10"/>
                    <Button x:Name="BtnCanceladas" Text="Rechazadas" Clicked="OnCanceladasClicked" BackgroundColor="#90A4AE" TextColor="Black" CornerRadius="15" Padding="20,10"/>
                    <Button x:Name="BtnFinalizadas" Text="Finalizadas" Clicked="OnFinalizadasClicked" BackgroundColor="#90A4AE" TextColor="Black" CornerRadius="15" Padding="20,10"/>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Lista de Citas -->
            <CollectionView x:Name="CitasCollectionView" Grid.Row="1" Margin="20,10" SelectionMode="None" VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView SwipeStarted="OnSwipeStarted">
                            <!-- ✅ BOTÓN EDITAR (Izquierda) -->
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem IconImageSource="editar.png" BackgroundColor="Transparent" CommandParameter="{Binding .}" Invoked="EditarCitaSwipeInvoked" IsVisible="{Binding ., Converter={StaticResource PuedeEditarCitaConverter}}"/>
                                </SwipeItems>
                            </SwipeView.LeftItems>

                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem IconImageSource="delete.png" BackgroundColor="Transparent" Invoked="EliminarCitaSwipeInvoked" CommandParameter="{Binding Id}" IsVisible="{Binding ., Converter={StaticResource PuedeEliminarCitaConverter}}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Border BackgroundColor="#28475C" StrokeShape="RoundRectangle 15" Padding="15" Margin="0,5" StrokeThickness="0">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto,Auto">
                                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding Nombre}" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding FechaConFormato}" TextColor="#E0F7FA" FontSize="14"/>
                                    <!-- ✅ SERVICIO Y PRECIO -->
                                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding ServicioNombre, StringFormat='Servicio: {0}'}" TextColor="White" FontSize="14" IsVisible="{Binding ServicioNombre}"/>
                                    <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding ServicioPrecio, StringFormat='Precio: ${0:N0}'}" TextColor="White" FontSize="14" IsVisible="{Binding ServicioNombre}"/>
                                    <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" BackgroundColor="{Binding Estado, Converter={StaticResource EstadoColorConverter}}" StrokeShape="RoundRectangle 10" Padding="10,5" StrokeThickness="0" VerticalOptions="Start" HorizontalOptions="End">
                                        <Label Text="{Binding Estado}" TextColor="White" FontSize="12" FontAttributes="Bold"/>
                                    </Border>

                                    <!-- ✅ HINTS DE DESLIZAR - LADO IZQUIERDO (EDITAR) -->
                                    <Label Grid.Row="4" Grid.Column="0" HorizontalOptions="Start" Margin="0,5,0,0" IsVisible="{Binding ., Converter={StaticResource PuedeEditarCitaConverter}}" FontSize="12" TextColor="White" FontAttributes="Bold" VerticalOptions="Center" Opacity="0" Text="⋙ Desliza para editar"/>

                                    <!-- ✅ HINTS DE DESLIZAR - LADO DERECHO (ELIMINAR) -->
                                    <Label Grid.Row="4" Grid.Column="2" HorizontalOptions="End" Margin="0,5,0,0" IsVisible="{Binding ., Converter={StaticResource PuedeEliminarCitaConverter}}" FontSize="12" TextColor="White" FontAttributes="Bold" VerticalOptions="Center" Opacity="0" Text="⋘ Desliza para eliminar"/>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
        <VerticalStackLayout x:Name="EmptyStateLayout" IsVisible="False" VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
            <Image Source="calendarblanco.png" WidthRequest="80" HeightRequest="80" Opacity="0.6"/>
            <Label Text="No hay citas" FontSize="18" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
            <Label Text="Las citas por gestionar aparecerán aquí" FontSize="14" TextColor="#90A4AE" HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>
        <controls:LoadingControl x:Name="LoadingIndicator" IsVisible="False"/>
    </Grid>
</ContentPage>