<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   x:Class="Barber.Maui.BrandonBarber.Pages.ListarTodasBarberiasPage"
    BackgroundColor="#0E2A36" xmlns:controls="clr-namespace:Barber.Maui.BrandonBarber.Controls" Grid.RowSpan="1">

    <Grid>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Padding="0,10,20,0">
                <Label Grid.Column="0" Text="Todas las BarberÃ­as" FontSize="24" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
            </Grid>
            <VerticalStackLayout Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center">
                <Label x:Name="TotalBarberiasLabel" Text="0" FontSize="24" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label Text="Total Barberias" FontSize="12" TextColor="White" HorizontalOptions="Center" />
            </VerticalStackLayout>
            <Border Grid.Row="1" BackgroundColor="#28475C" StrokeShape="RoundRectangle 25" Margin="0,20,0,20" StrokeThickness="0" HeightRequest="50">
                <Grid ColumnDefinitions="*, Auto">
                    <Entry Grid.Column="0" Placeholder="Buscar barberÃ­as..." Margin="10,0,0,0" VerticalOptions="Center" PlaceholderColor="#A0A0A0" TextColor="White" BackgroundColor="Transparent" Text="{Binding SearchText}" FontSize="16"/>
                    <Button Grid.Column="1" Text="âœ•" BackgroundColor="Transparent" TextColor="#A0A0A0" FontSize="16" WidthRequest="30" HeightRequest="30" Command="{Binding ClearSearchCommand}" IsVisible="{Binding HasSearchText}" />
                </Grid>
            </Border>
            <CollectionView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never" Grid.Row="4" ItemsSource="{Binding FilteredBarberias}" SelectionMode="None">
                <!--<CollectionView.EmptyView>
                    <StackLayout Padding="20" VerticalOptions="Center">
                        <Label Text="ðŸª" FontSize="48" HorizontalOptions="Center" TextColor="#A0A0A0"/>
                        <Label Text="No hay barberÃ­as registradas" FontSize="18" HorizontalOptions="Center" TextColor="#A0A0A0" Margin="0,10,0,5"/>
                    </StackLayout>
                </CollectionView.EmptyView>-->
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="15" Margin="0,0,0,15" BackgroundColor="#90A4AE" StrokeShape="RoundRectangle 15" StrokeThickness="0">
                            <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="80, *, Auto">
                                <Border WidthRequest="80" HeightRequest="80" StrokeShape="RoundRectangle 10" BackgroundColor="White" VerticalOptions="Center" HorizontalOptions="Center" StrokeThickness="0">
                                    <Image Source="{Binding LogoUrl, TargetNullValue='picture.png'}" Aspect="AspectFill"/>
                                </Border>
                                <StackLayout Grid.Row="0" Grid.Column="1" VerticalOptions="Start" Margin="15,0,0,0">
                                    <Label Text="{Binding Nombre}" FontSize="18" FontAttributes="Bold" TextColor="Black" LineBreakMode="WordWrap"/>
                                    <Label FontSize="14" TextColor="Black" LineBreakMode="WordWrap">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Admin: " FontAttributes="Bold" TextColor="Black"/>
                                                <Span Text="{Binding NombreAdministrador}" TextColor="Black"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Text="{Binding Direccion}" FontSize="14" TextColor="Black" LineBreakMode="WordWrap"/>
                                    <Label Text="{Binding Telefono}" FontSize="14" TextColor="Black"/>
                                    <Label Text="{Binding Email}" FontSize="14" TextColor="Black" LineBreakMode="WordWrap"/>
                                </StackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <controls:LoadingControl x:Name="LoadingIndicator" IsVisible="False"/>
    </Grid>
</ContentPage>
