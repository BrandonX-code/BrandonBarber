<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barber.Maui.BrandonBarber.Pages.ListaCitas"
             BackgroundColor="#0E2A36" xmlns:controls="clr-namespace:Barber.Maui.BrandonBarber.Controls" Grid.RowSpan="1">

    <Grid>
        <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
            <Grid RowDefinitions="Auto, Auto, *" Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Border BackgroundColor="#1E3A49" StrokeShape="RoundRectangle 10" Padding="15" StrokeThickness="0">
                        <VerticalStackLayout>
                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="20,20,20,10">
                                <Label Grid.Column="0" 
                                   Text="Citas Agendadas" 
                                   FontSize="20" 
                                   TextColor="White" 
                                   FontAttributes="Bold" 
                                   VerticalOptions="Center" 
                                   x:Name="TituloCitasLabel"
                                   HorizontalOptions="Center" />

                                <VerticalStackLayout Grid.Column="1" 
                                     x:Name="ContadorCitasSection"
                                     HorizontalOptions="End" 
                                     VerticalOptions="Center">
                                    <Label x:Name="TotalCitasLabel" Text="0" FontSize="24" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
                                    <Label Text="Citas Del Mes" FontSize="13" TextColor="White" HorizontalOptions="Center" />
                                </VerticalStackLayout>
                            </Grid>
                            <VerticalStackLayout x:Name="PickerSection" Spacing="10" IsVisible="False">
                                <Border x:Name="barberiaBorder" StrokeThickness="0" StrokeShape="RoundRectangle 16" BackgroundColor="#90A4AE" Padding="0" Margin="0,0,0,10">
                                    <VerticalStackLayout Spacing="0">
                                        <Border BackgroundColor="#0E2A36" Padding="10" StrokeThickness="0" StrokeShape="RoundRectangle 16,16,0,0">
                                            <Label Text="Barbería" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                                        </Border>
                                        <Grid Padding="15,12" ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                                            <Border WidthRequest="70" HeightRequest="70" BackgroundColor="#E0F7FA" StrokeShape="RoundRectangle 50" VerticalOptions="Center" StrokeThickness="0">
                                                <Image x:Name="BarberiaLogoImage" Source="picture.png" Aspect="AspectFill"/>
                                            </Border>
                                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center" Margin="12,0,0,0">
                                                <Label x:Name="BarberiaSelectedLabel" Text="Seleccionar Barbería" TextColor="Black" FontSize="18" FontAttributes="Bold"/>
                                                <Label x:Name="BarberiaTelefonoLabel" Text="" TextColor="#333" FontSize="14"/>
                                            </VerticalStackLayout>
                                            <Button x:Name="BarberiaSelectButton" Grid.Column="2" Text="Seleccionar" BackgroundColor="#0E2A36" TextColor="White" CornerRadius="10" FontAttributes="Bold" HorizontalOptions="End" VerticalOptions="Center" WidthRequest="120" HeightRequest="40" Clicked="OnBarberiaPickerTapped" Margin="0,0,10,0" IsVisible="False"/>
                                        </Grid>
                                    </VerticalStackLayout>
                                </Border>
                            </VerticalStackLayout>

                            <Border StrokeThickness="0" StrokeShape="RoundRectangle 16" BackgroundColor="#90A4AE" Padding="0" Margin="0,10,0,10">
                                <VerticalStackLayout Spacing="0">
                                    <Border BackgroundColor="#0E2A36" Padding="10" StrokeThickness="0" StrokeShape="RoundRectangle 16,16,0,0">
                                        <Label Text="Fecha" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                                    </Border>
                                    <Grid Padding="10,10">
                                        <Border StrokeShape="RoundRectangle 12" BackgroundColor="#E0E0E0" StrokeThickness="0" HorizontalOptions="Fill">
                                            <DatePicker x:Name="datePicker" Date="{Binding FechaSeleccionada, Mode=TwoWay}" Format="dd/MM/yyyy" TextColor="Black" FontSize="17" FontAttributes="Bold" Margin="10,0"/>
                                        </Border>
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>


                            <HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center" Spacing="10" Margin="0,15,0,0">
                                <Button Text="Buscar Reservas" Clicked="RecuperarCitasPorFecha" BackgroundColor="#FF6F91" TextColor="Black" CornerRadius="15" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>

                    <Border BackgroundColor="#1E3A49" StrokeShape="RoundRectangle 10" Padding="15" StrokeThickness="0">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Citas" TextColor="White" FontSize="18" />
                            <CollectionView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never" x:Name="ResultadosCollection" HeightRequest="420">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="5" Margin="0,7" BackgroundColor="#90A4AE" StrokeShape="RoundRectangle 12" StrokeThickness="0">
                                            <Grid ColumnDefinitions="*, Auto">
                                                <VerticalStackLayout Spacing="10">
                                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                                        <Image Grid.Column="0" Source="id.png" WidthRequest="20" HeightRequest="20" />
                                                        <Label Grid.Column="1" Text="{Binding Nombre}" FontSize="Body" TextColor="Black" FontAttributes="Bold" LineBreakMode="WordWrap" VerticalOptions="Center" />
                                                    </Grid>
                                                    <HorizontalStackLayout IsVisible="{Binding MostrarBarberoInfo}">
                                                        <HorizontalStackLayout Spacing="5">
                                                            <Image Source="agregarbarbero.png" WidthRequest="20" HeightRequest="20" />
                                                            <Label Text="Barbero: " FontSize="Small" TextColor="Black" />
                                                        </HorizontalStackLayout>
                                                        <Label Text="{Binding BarberoNombre}" FontSize="Small" TextColor="Black" FontAttributes="Bold"/>
                                                    </HorizontalStackLayout>
                                                    <HorizontalStackLayout Spacing="5">
                                                        <Image Source="calendar.png" WidthRequest="20" HeightRequest="20" />
                                                        <Label Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy - hh:mm tt}'}" FontSize="16" TextColor="Black" />
                                                    </HorizontalStackLayout>

                                                    <HorizontalStackLayout Spacing="5">
                                                        <Image Source="call.png" WidthRequest="20" HeightRequest="20" />
                                                        <Label Text="{Binding Telefono}" FontSize="14" TextColor="Black" />
                                                    </HorizontalStackLayout>
                                                    <HorizontalStackLayout Spacing="5" IsVisible="{Binding ., Converter={StaticResource ServicioVisibleConverter}}">
                                                        <Image Source="servicio.png" WidthRequest="20" HeightRequest="20" />
                                                        <Label Text="Servicio: " FontSize="16" TextColor="Black" FontAttributes="Bold"/>
                                                        <Label Text="{Binding ServicioNombre}" FontSize="16" TextColor="Black" />
                                                    </HorizontalStackLayout>

                                                    <HorizontalStackLayout Spacing="5" IsVisible="{Binding ., Converter={StaticResource ServicioVisibleConverter}}">
                                                        <Image Source="precio.png" WidthRequest="20" HeightRequest="20" />
                                                        <Label Text="Precio: " FontSize="16" TextColor="Black" FontAttributes="Bold"/>
                                                        <Label Text="{Binding ServicioPrecio, StringFormat='${0:N0}'}" FontSize="15" TextColor="Black"/>
                                                    </HorizontalStackLayout>
                                                </VerticalStackLayout>
                                                <Border Grid.Column="1" Stroke="Transparent" Padding="7"  StrokeShape="RoundRectangle 7" VerticalOptions="Start">
                                                    <Border.BackgroundColor>
                                                        <Binding Path="Estado" Converter="{StaticResource EstadoColorConverter}" />
                                                    </Border.BackgroundColor>
                                                    <Label Text="{Binding IconoEstado}" TextColor="White"  FontSize="12"  FontAttributes="Bold"  HorizontalOptions="Center"  VerticalOptions="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Border>


                </VerticalStackLayout>
            </Grid>
        </ScrollView>

        <controls:LoadingControl x:Name="LoadingIndicator" IsVisible="False"/>
    </Grid>
</ContentPage>
