<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barber.Maui.BrandonBarber.Pages.ReseñasBarberoPage"
             BackgroundColor="#0E2A36" xmlns:controls="clr-namespace:Barber.Maui.BrandonBarber.Controls" Grid.RowSpan="1">
    <Grid>
        <ScrollView>

        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Reseñas del Barbero" TextColor="White" FontSize="26" FontAttributes="Bold" />

            <CollectionView x:Name="ResenasCollection" ItemsLayout="VerticalList">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="#90A4AE" StrokeShape="RoundRectangle 15" Padding="15" Margin="0,10" StrokeThickness="0">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding NombreCliente}" TextColor="Black" FontSize="16" FontAttributes="Bold"/>
                                
                                <HorizontalStackLayout Spacing="3">
                                    <Label Text="{Binding Estrellas}" TextColor="Black" FontSize="20"/>
                                    <Label Text="{Binding Puntuacion}" TextColor="Black" FontSize="14"/>
                                </HorizontalStackLayout>

                                <Label Text="{Binding Comentario}" TextColor="Black" FontSize="14" LineHeight="1.2">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"  Binding="{Binding Comentario}" Value="">
                                            <Setter Property="IsVisible" Value="False" />
                                        </DataTrigger>
                                        
                                        <DataTrigger TargetType="Label"  Binding="{Binding Comentario}" Value="{x:Null}">
                                            <Setter Property="IsVisible" Value="False" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                                <Label Text="{Binding Fecha}" TextColor="Black" FontSize="12"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
        <VerticalStackLayout x:Name="EmptyStateLayout" IsVisible="False" VerticalOptions="Center"  HorizontalOptions="Center" Spacing="15">
            <Image Source="chat.png" WidthRequest="80" HeightRequest="80" Opacity="0.6"/>
            <Label Text="Este barbero aún no tiene reseñas" FontSize="18" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
            <Label Text="Cuando los clientes califiquen, aparecerán aquí" FontSize="14" TextColor="#90A4AE"
           HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>
        <controls:LoadingControl x:Name="LoadingIndicator" IsVisible="False"/>
    </Grid>
</ContentPage>
