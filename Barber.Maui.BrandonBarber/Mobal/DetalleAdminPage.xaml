<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Barber.Maui.BrandonBarber.Mobal.DetalleAdminPage"
             BackgroundColor="#80000000">

    <ContentPage.Content>
        <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">
            <Grid>
                <BoxView BackgroundColor="Transparent" />
                <Border BackgroundColor="White" StrokeShape="RoundRectangle 20" Margin="20" Padding="0" VerticalOptions="Center" StrokeThickness="0">

                    <StackLayout Spacing="0">
                        <Border BackgroundColor="#0E2A36" StrokeThickness="0" StrokeShape="RoundRectangle 20,20,0,0" HeightRequest="80">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#226C8F" Offset="0.0" />
                                    <GradientStop Color="#0E2A36" Offset="1.0" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackLayout Grid.Column="0" 
                                       VerticalOptions="Center" 
                                       Margin="20,0">
                                    <Label Text="Información de Administrador"
                                       FontSize="18" HorizontalOptions="Center"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                </StackLayout>
                            </Grid>
                        </Border>
                        <StackLayout Padding="25" Spacing="20">
                            <Border BackgroundColor="#E8E8E8"  StrokeShape="RoundRectangle 50" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" StrokeThickness="0">
                                <Grid>
                                    <Border StrokeShape="RoundRectangle 50" WidthRequest="100" HeightRequest="100" IsVisible="{Binding TieneImagen}" StrokeThickness="0">
                                        <Image Source="{Binding ImagenPath}" Aspect="AspectFill" />
                                    </Border>
                                    <Border BackgroundColor="#3498DB" StrokeShape="RoundRectangle 50" WidthRequest="100" HeightRequest="100" IsVisible="{Binding NoTieneImagen}" StrokeThickness="0">
                                        <Label Text="{Binding InicialNombre}" FontSize="32" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                                    </Border>
                                </Grid>
                            </Border>

                            <StackLayout Spacing="15">
                                <StackLayout>
                                    <Label Text="Nombre Completo" FontSize="12" TextColor="#7F8C8D"  FontAttributes="Bold" />
                                    <Label Text="{Binding Nombre}" FontSize="16" TextColor="#2C3E50" Margin="0,5,0,0" />
                                    <BoxView HeightRequest="1" BackgroundColor="#ECF0F1" Margin="0,5,0,0" />
                                </StackLayout>
                                <StackLayout>
                                    <Label Text="Correo Electrónico" FontSize="12" TextColor="#7F8C8D" FontAttributes="Bold" />
                                    <Label Text="{Binding Email}" FontSize="16" TextColor="#2C3E50" Margin="0,5,0,0" />
                                    <BoxView HeightRequest="1"  BackgroundColor="#ECF0F1" Margin="0,5,0,0" />
                                </StackLayout>
                                <StackLayout>
                                    <Label Text="Número de Cédula" FontSize="12" TextColor="#7F8C8D" FontAttributes="Bold" />
                                    <Label Text="{Binding Cedula}" FontSize="16" TextColor="#2C3E50" Margin="0,5,0,0" />
                                    <BoxView HeightRequest="1" BackgroundColor="#ECF0F1" Margin="0,5,0,0" />
                                </StackLayout>

                                <StackLayout>
                                    <Label Text="Teléfono" FontSize="12" TextColor="#7F8C8D" FontAttributes="Bold" />
                                    <Label Text="{Binding Telefono}" FontSize="16" TextColor="#2C3E50" Margin="0,5,0,0" />
                                    <BoxView HeightRequest="1" BackgroundColor="#ECF0F1"  Margin="0,5,0,0" />
                                </StackLayout>

                                <StackLayout>
                                    <Label Text="Dirección" FontSize="12" TextColor="#7F8C8D" FontAttributes="Bold" />
                                    <Label Text="{Binding Direccion}" FontSize="16" TextColor="#2C3E50" Margin="0,5,0,0" />
                                    <BoxView HeightRequest="1" BackgroundColor="#ECF0F1" Margin="0,5,0,0" />
                                </StackLayout>

                                <StackLayout>
                                    <Label Text="Rol" FontSize="12" TextColor="#7F8C8D" FontAttributes="Bold" />
                                    <Border BackgroundColor="#FEF9E7" StrokeThickness="0" StrokeShape="RoundRectangle 10" Padding="10" Margin="0,5,0,0">
                                        <Label Text="{Binding Rol}" FontSize="14" TextColor="#E67E22" FontAttributes="Bold" />
                                    </Border>
                                </StackLayout>
                            </StackLayout>
                            <Button Text="Cerrar" BackgroundColor="#717d7e" TextColor="White" CornerRadius="25" HeightRequest="50" FontSize="16" FontAttributes="Bold" Clicked="OnCerrarClicked" Margin="0,20,0,0" />
                        </StackLayout>
                    </StackLayout>
                </Border>
            </Grid>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>