<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gasolutions.Maui.App.Pages.GestionarServiciosPage">
	<ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" BackgroundColor="#0E2A36">
            <Label Text="Gestión de Servicios" FontSize="24" TextColor="#E0F7FA" FontAttributes="Bold" HorizontalOptions="Center"/>

            <!-- Formulario de Servicio -->
            <Border StrokeThickness="0" Background="#90A4AE" StrokeShape="RoundRectangle 10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Entry x:Name="NombreEntry" Placeholder="Nombre del Servicio" TextColor="Black"/>
                    <Entry x:Name="PrecioEntry" Placeholder="Precio" Keyboard="Numeric" TextColor="Black" TextChanged="OnPrecioEntryTextChanged"/>
                    <Image x:Name="PreviewImage" HeightRequest="100" WidthRequest="100" Aspect="AspectFill" IsVisible="False"/>
                    <Button Text="Seleccionar Imagen" Clicked="OnSeleccionarImagen" BackgroundColor="#0E2A36" TextColor="White"/>

                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <Button x:Name="AgregarBtn" Text="Agregar" Clicked="OnAgregarServicio"
                    BackgroundColor="#0E2A36" TextColor="White"
                    HorizontalOptions="Center" Grid.Column="1"/>
                    </Grid>

                    <Grid ColumnDefinitions="*, *" ColumnSpacing="10" HorizontalOptions="Center">
                        <Button x:Name="EditarBtn" Text="Guardar Cambios" Clicked="OnEditarServicio"
                    BackgroundColor="#FF6F91" TextColor="Black"
                    IsVisible="False" Grid.Column="0"/>
                        <Button x:Name="CancelarBtn" Text="Cancelar" Clicked="OnCancelarEdicion"
                    BackgroundColor="#B0BEC5" TextColor="Black"
                    IsVisible="False" Grid.Column="1"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <ScrollView HeightRequest="400">
                <CollectionView x:Name="ServiciosListView" SelectionMode="Single" SelectionChanged="OnServicioSeleccionado">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="#90A4AE" StrokeShape="RoundRectangle 10" Padding="10" Margin="5">
                                <Grid ColumnDefinitions="80,*,Auto,Auto" VerticalOptions="Center">
                                    <Image Source="{Binding Imagen}" HeightRequest="60" WidthRequest="60" Grid.Column="0"/>
                                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                                        <Label Text="{Binding Nombre}" TextColor="Black" FontSize="18" FontAttributes="Bold"/>
                                        <Label Text="{Binding Precio, StringFormat='${0:N0}'}" TextColor="Black" FontSize="16"/>
                                    </VerticalStackLayout>
                                    <Button ImageSource="editar.png" HeightRequest="20" WidthRequest="20" Grid.Column="2" Clicked="OnEditarBtnClicked" CommandParameter="{Binding .}" BackgroundColor="Transparent" TextColor="White" Padding="5,0"/>
                                    <Button ImageSource="delete.png" HeightRequest="20" WidthRequest="20" Grid.Column="3" Clicked="OnEliminarBtnClicked" CommandParameter="{Binding .}" BackgroundColor="Transparent" TextColor="White" Padding="5,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>