<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gasolutions.Maui.App.Pages.ListaCitas">

    <AbsoluteLayout>

        <Image Source="fondobarber.jpg" Opacity="0.90" Aspect="AspectFill" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" />

        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
            <Grid RowDefinitions="Auto, Auto, *" Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Frame BackgroundColor="#343434" CornerRadius="10" Padding="15" HasShadow="True">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Citas Agendadas" TextColor="#c0aa4f" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" />

                            <Frame CornerRadius="12" Padding="3" HasShadow="True" BackgroundColor="#2b2b2b" BorderColor="Black" WidthRequest="260" HorizontalOptions="Center">
                                <DatePicker x:Name="datePicker" Date="{Binding FechaSeleccionada, Mode=TwoWay}" Format="dd/MM/yyyy" TextColor="White" WidthRequest="250" FontSize="20" FontAttributes="Bold" HeightRequest="65" />
                            </Frame>

                            <HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center" Spacing="10" Margin="0,10">
                                <Button Text="Buscar Reservas" Clicked="RecuperarCitasPorFecha" BackgroundColor="#c0aa4f" TextColor="White" CornerRadius="10" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                    </Frame>


                    <Frame BackgroundColor="#343434" CornerRadius="10" Padding="15" HasShadow="True">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Tus Citas" TextColor="#f0e68c" FontSize="18" />
                            <CollectionView x:Name="ResultadosCollection" HeightRequest="420">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Padding="5" Margin="0,7"  BorderColor="Black" BackgroundColor="#2b2b2b" CornerRadius="12" HasShadow="True">
                                            <Grid ColumnDefinitions="*, Auto">
                                                <VerticalStackLayout Spacing="10">
                                                    <HorizontalStackLayout Spacing="5">
                                                        <HorizontalStackLayout Spacing="5">
                                                            <Image Source="id.png" WidthRequest="20" HeightRequest="20" />
                                                        </HorizontalStackLayout>
                                                        <Label Text="{Binding Nombre}" FontSize="Body" TextColor="White" FontAttributes="Bold"/>
                                                    </HorizontalStackLayout>
                                                    <HorizontalStackLayout Spacing="5">
                                                        <Image Source="calendar.png" WidthRequest="20" HeightRequest="20" />
                                                        <Label Text="{Binding FechaConFormato, StringFormat='{0:hh:mm tt}'}" FontSize="16" TextColor="Honeydew" />
                                                    </HorizontalStackLayout>
                                                    
                                                    <HorizontalStackLayout Spacing="5">
                                                        <Image Source="call.png" WidthRequest="20" HeightRequest="20" />
                                                        <Label Text="{Binding Telefono}" FontSize="14" TextColor="White" />
                                                    </HorizontalStackLayout>
                                                    
                                                    <HorizontalStackLayout>
                                                        <HorizontalStackLayout Spacing="5">
                                                            <Image Source="agregarbarbero.png" WidthRequest="20" HeightRequest="20" />
                                                            <Label Text="Barbero: " FontSize="Small" TextColor="White" />
                                                        </HorizontalStackLayout>
                                                        <Label Text="{Binding BarberoNombre}" FontSize="Small" TextColor="White" FontAttributes="Bold"/>
                                                    </HorizontalStackLayout>
                                                </VerticalStackLayout>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Frame>


                </VerticalStackLayout>
            </Grid>
        </ScrollView>

        <Grid x:Name="LoaderOverlay" BackgroundColor="#80000000" IsVisible="False" InputTransparent="False" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"  ZIndex="10">
            <BoxView BackgroundColor="Transparent">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer />
                </BoxView.GestureRecognizers>
            </BoxView>
            <ActivityIndicator IsRunning="True" Color="#c0aa4f" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="50" HeightRequest="50" />
        </Grid>
    </AbsoluteLayout>
</ContentPage>
