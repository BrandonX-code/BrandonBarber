<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gasolutions.Maui.App.Pages.AgregarBarberoPage"
             BackgroundColor="#0E2A36">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#FF6F91" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#717d7e" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20">
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="0,20">
                <Label Text="Agregar Nuevo Barbero" FontSize="24" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" Margin="0,0,0,20" />
                <VerticalStackLayout x:Name="PickerSection" Spacing="5" IsVisible="False">
                    <Label Text="Seleccionar Barbería *" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Picker x:Name="BarberiaPicker" 
                SelectedIndexChanged="BarberiaPicker_SelectedIndexChanged" 
                ItemDisplayBinding="{Binding Nombre}" 
                Title="Seleccionar Barbería" 
                TitleColor="Black" 
                TextColor="Black" 
                FontSize="16" 
                HeightRequest="45" 
                VerticalOptions="Center" 
                Margin="10,0" />
                    </Frame>
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="5">
                    <Label Text="Nombre completo *" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="NombreEntry" TextColor="Black" Placeholder="Nombre completo del barbero" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0" />
                    </Frame>

                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Cédula *" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="CedulaEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0"  Placeholder="Número de cédula" Keyboard="Numeric" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Correo electrónico *" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="EmailEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0"  Placeholder="ejemplo@correo.com" Keyboard="Email" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Teléfono" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="TelefonoEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0"  Placeholder="Número de teléfono" Keyboard="Telephone" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Dirección" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="DireccionEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0"  Placeholder="Dirección del barbero" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Especialidades" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="EspecialidadesEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0"  Placeholder="Ej: Corte clásico, Barba, Afeitado" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Experiencia (años)" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="ExperienciaEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0"  Placeholder="Años de experiencia" Keyboard="Numeric" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Contraseña *" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="PasswordEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0"  Placeholder="Contraseña" IsPassword="True" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Confirmar contraseña *" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="ConfirmPasswordEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0"  Placeholder="Confirmar contraseña" IsPassword="True" />
                    </Frame>
                </VerticalStackLayout>

                <!-- Switch para barbero activo -->
                <!--
                <HorizontalStackLayout Spacing="10" Margin="0,10">
                    <Label Text="Barbero activo:" TextColor="White" FontSize="16" VerticalOptions="Center" />
                    <Switch x:Name="ActivoSwitch" IsToggled="True" OnColor="#90A4AE" />
                </HorizontalStackLayout>-->

                <Label x:Name="ErrorLabel" TextColor="#ff0000" FontSize="14" HorizontalOptions="Center" IsVisible="False" />
                <Label x:Name="SuccessLabel" TextColor="#00ff00" FontSize="14" HorizontalOptions="Center" IsVisible="False" />

                <Grid ColumnSpacing="15" Margin="0,20,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Text="Cancelar" Grid.Column="0" Style="{StaticResource SecondaryButtonStyle}" Clicked="OnCancelarClicked" />
                    <Button Text="Agregar Barbero" Grid.Column="1" Style="{StaticResource PrimaryButtonStyle}" Clicked="OnAgregarBarberoClicked" />
                </Grid>

                <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="#90A4AE" VerticalOptions="Center" HorizontalOptions="Center" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>