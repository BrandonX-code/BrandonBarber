<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gasolutions.Maui.App.MainPage">

    <Grid RowDefinitions="Auto, *, Auto" BackgroundColor="#566573">
        <Grid BackgroundColor="#F28F18" HeightRequest="80" HorizontalOptions="FillAndExpand" VerticalOptions="Start" Grid.Row="0">
            <Label Text="Reservar Turno 💈" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" FontAttributes="Bold" FontSize="Medium"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Id:" />
                <Entry x:Name="IdEntry" Placeholder="Ingrese el ID" BackgroundColor="White" TextColor="Black"/>

                <Label Text="Nombre:" />
                <Entry x:Name="NombreEntry" Placeholder="Ingrese su Nombre" BackgroundColor="White" TextColor="Black"/>
                
                <Label Text="Teléfono:" />
                <Entry x:Name="TelefonoEntry" Placeholder="Ingrese su Teléfono" Keyboard="Telephone" BackgroundColor="White" TextColor="Black"/>

                <!--<StackLayout HorizontalOptions="Center">-->
                    <Label Text="Fecha de Cita:" />
                    <DatePicker x:Name="FechaPicker" BackgroundColor="White" TextColor="Black" HorizontalOptions="Center"/>

                    <Label Text="Hora de Cita:" />
                <TimePicker x:Name="HoraPicker" BackgroundColor="White" TextColor="Black" HorizontalOptions="Center"/>
                <!--</StackLayout>-->


                <HorizontalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center">
                    <Button Text="Cancelar " Clicked="OnCancelarClicked"  WidthRequest="120" BackgroundColor="#b2babb"/>
                    <Button Text="Reservar" Clicked="OnGuardarClicked"  WidthRequest="120" BackgroundColor="#F28F18"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <Grid BackgroundColor="#F28F18" HeightRequest="60" HorizontalOptions="FillAndExpand" Grid.Row="2">
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Spacing="10">
                <Button Text="Inicio" Clicked="OnInicioClicked" BackgroundColor="Orange" TextColor="Black"/>
                <Button Text="Buscar" Clicked="OnBuscarClicked" BackgroundColor="Orange" TextColor="Black"/>
                <Button Text="Configuración" Clicked="OnConfiguracionClicked" BackgroundColor="Orange" TextColor="Black"/>
            </HorizontalStackLayout>
        </Grid>
    </Grid>
</ContentPage>

