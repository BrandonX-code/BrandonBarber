<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gasolutions.Maui.App.Pages.RegistroPage"
             BackgroundColor="#1e1e1e">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="RegistroEntryStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="#2b2b2b" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="PlaceholderColor" Value="#909090" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            <Style x:Key="RegistroButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#c0aa4f" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            <Style x:Key="CancelButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#3a3a3a" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20">
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="0,20">
                <Label Text="Crear Cuenta de Cliente"  FontSize="24" FontAttributes="Bold" TextColor="#c0aa4f" HorizontalOptions="Center" Margin="0,0,0,20" />

                <VerticalStackLayout Spacing="5">
                    <Label Text="Nombre completo" TextColor="White" FontSize="16" />
                    <Entry x:Name="NombreEntry"  Style="{StaticResource RegistroEntryStyle}" Placeholder="Nombre completo" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Cedula" TextColor="White" FontSize="16" />
                    <Entry x:Name="CedulaEntry" Style="{StaticResource RegistroEntryStyle}" Placeholder="Numero de cedula" Keyboard="Numeric" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Correo electronico" TextColor="White" FontSize="16" />
                    <Entry x:Name="EmailEntry" Style="{StaticResource RegistroEntryStyle}" Placeholder="ejemplo@correo.com" Keyboard="Email" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Telefono" TextColor="White" FontSize="16" />
                    <Entry x:Name="TelefonoEntry" Style="{StaticResource RegistroEntryStyle}" Placeholder="Numero de telefono" Keyboard="Telephone" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Direccion" TextColor="White" FontSize="16" />
                    <Entry x:Name="DireccionEntry" Style="{StaticResource RegistroEntryStyle}" Placeholder="Direccion" />
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="5">
                    <Label Text="Contrase単a" TextColor="White" FontSize="16" />
                    <Entry x:Name="PasswordEntry" Style="{StaticResource RegistroEntryStyle}" Placeholder="Contrase単a" IsPassword="True" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Confirmar contrase単a" TextColor="White" FontSize="16" />
                    <Entry x:Name="ConfirmPasswordEntry" Style="{StaticResource RegistroEntryStyle}" Placeholder="Confirmar contrase単a" IsPassword="True" />
                </VerticalStackLayout>

                <Label x:Name="ErrorLabel" TextColor="#ff0000" FontSize="14" HorizontalOptions="Center" IsVisible="False" />

                <Grid ColumnSpacing="15" Margin="0,20,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Text="Cancelar" Grid.Column="0" Style="{StaticResource CancelButtonStyle}" Clicked="OnCancelarClicked" />

                    <Button Text="Registrarse" Grid.Column="1" Style="{StaticResource RegistroButtonStyle}" Clicked="OnRegistrarClicked" />
                </Grid>

                <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="#c0aa4f" VerticalOptions="Center" HorizontalOptions="Center" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>