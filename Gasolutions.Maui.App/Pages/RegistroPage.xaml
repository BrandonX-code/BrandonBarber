<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gasolutions.Maui.App.Pages.RegistroPage"
             BackgroundColor="#0E2A36">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="RegistroEntryStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="#E0F7FA" />
                <Setter Property="TextColor" Value="#0E2A36" />
                <Setter Property="PlaceholderColor" Value="#90A4AE" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            <Style x:Key="RegistroButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#FF6F91" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            <Style x:Key="CancelButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#717d7e" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20">
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="0,20">
                <Label Text="Crear Cuenta de Cliente"  FontSize="24" FontAttributes="Bold" TextColor="#E0F7FA" HorizontalOptions="Center" Margin="0,0,0,20" />

                <VerticalStackLayout Spacing="5">
                    <Label Text="Nombre completo" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="NombreEntry"  FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0" Placeholder="Nombre completo" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Cedula" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="CedulaEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0" Placeholder="Numero de cedula" Keyboard="Numeric" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Correo electronico" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="EmailEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0" Placeholder="ejemplo@correo.com" Keyboard="Email" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Telefono" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="TelefonoEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0" Placeholder="Numero de telefono" Keyboard="Telephone" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Direccion" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="DireccionEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0" Placeholder="Direccion" />
                    </Frame>
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="5">
                    <Label Text="Contrase単a" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="PasswordEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0" Placeholder="Contrase単a" IsPassword="True" />
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Confirmar contrase単a" TextColor="White" FontSize="16" />
                    <Frame CornerRadius="10" Padding="0" HasShadow="False" BackgroundColor="#E0F7FA" HeightRequest="45" IsClippedToBounds="True">
                        <Entry x:Name="ConfirmPasswordEntry" FontSize="16" HeightRequest="45" VerticalOptions="Center" Margin="10,0" Placeholder="Confirmar contrase単a" IsPassword="True" />
                    </Frame>
                </VerticalStackLayout>

                <Label x:Name="ErrorLabel" TextColor="#ff0000" FontSize="14" HorizontalOptions="Center" IsVisible="False" />

                <Grid ColumnSpacing="15" Margin="0,20,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Text="Cancelar" Grid.Column="0" Style="{StaticResource CancelButtonStyle}" Clicked="OnCancelarClicked" />

                    <Button Text="Registrarse" Grid.Column="1" Style="{StaticResource RegistroButtonStyle}" Clicked="OnRegistrarClicked" />
                </Grid>

                <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="#90A4AE" VerticalOptions="Center" HorizontalOptions="Center" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>