<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gasolutions.Maui.App.Pages.ListarClientesPage">

    <Grid BackgroundColor="#2b2b2b">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" BackgroundColor="#2b2b2b" Padding="20,30,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="1" Text="Lista de Clientes" FontSize="20" TextColor="#c0aa4f" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" />

            <ImageButton Grid.Column="2" Source="refresh.png"  BackgroundColor="Transparent" HeightRequest="24"  WidthRequest="24" VerticalOptions="Center" Clicked="OnRefreshClicked" />
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" Padding="20">
            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator" IsRunning="True" IsVisible="True" Color="#c0aa4f" VerticalOptions="Center" HorizontalOptions="Center" />

            <!-- Content Container -->
            <ScrollView x:Name="ContentContainer" IsVisible="False">
                <VerticalStackLayout Spacing="15">

                    <!-- Search Bar -->
                    <Frame BackgroundColor="#3d3d3d" CornerRadius="10" Padding="10" HasShadow="False">
                        <SearchBar x:Name="SearchBar" Placeholder="Buscar cliente por nombre o email..." PlaceholderColor="#888888" TextColor="#f0e68c" BackgroundColor="Transparent" TextChanged="OnSearchTextChanged" />
                    </Frame>

                    <!-- Stats Card -->
                    <Frame BackgroundColor="#3d3d3d" CornerRadius="10" Padding="15" HasShadow="True">
                        <HorizontalStackLayout Spacing="30">
                            <VerticalStackLayout HorizontalOptions="Center">
                                <Label x:Name="TotalClientesLabel" Text="0" FontSize="24" TextColor="#c0aa4f" FontAttributes="Bold" HorizontalOptions="Center" />
                                <Label Text="Total Clientes" FontSize="12" TextColor="#f0e68c" HorizontalOptions="Center" />
                            </VerticalStackLayout>

                            <VerticalStackLayout HorizontalOptions="Center">
                                <Label x:Name="ClientesActivosLabel" Text="0" FontSize="24" TextColor="#4CAF50" FontAttributes="Bold" HorizontalOptions="Center" />
                                <Label Text="Activos" FontSize="12" TextColor="#f0e68c" HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>

                    <CollectionView x:Name="ClientesCollectionView" ItemsSource="{Binding ClientesFiltrados}" BackgroundColor="Transparent" Margin="0,0,0,10">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="15" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#3d3d3d" CornerRadius="10" Padding="15" Margin="0,10" HasShadow="True">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Nombre y Rol -->
                                        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="5">
                                            <Label Text="{Binding Nombre}" FontSize="18" TextColor="#f0e68c" FontAttributes="Bold" />
                                            <Label Text="{Binding Email}" FontSize="14" TextColor="#c0aa4f" />
                                        </VerticalStackLayout>

                                        <!-- Status Badge -->
                                        <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#4CAF50" CornerRadius="15" Padding="10,5" VerticalOptions="Start"  HasShadow="False">
                                            <Label Text="{Binding Rol}" FontSize="12" TextColor="White" FontAttributes="Bold" />
                                        </Frame>

                                        <!-- Información adicional -->
                                        <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="2" Spacing="15" Margin="0,10,0,0">
                                            <HorizontalStackLayout Spacing="5">
                                                <Image Source="id.png" WidthRequest="16" HeightRequest="16" />
                                                <Label Text="{Binding Cedula}" FontSize="12" TextColor="#888888" />
                                            </HorizontalStackLayout>
                                        </HorizontalStackLayout>

                                        <!-- Botones de acción -->
                                        <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2" Spacing="10" Margin="0,15,0,0" HorizontalOptions="End">
                                            <Button Text="Ver Detalles" FontSize="12" BackgroundColor="#c0aa4f" TextColor="Black" CornerRadius="15" Padding="15,5" Clicked="OnVerDetallesClicked"  CommandParameter="{Binding}" />

                                            <Button Text="Eliminar" FontSize="12" BackgroundColor="#f44336" TextColor="White"  CornerRadius="15" Padding="15,5" Clicked="OnEliminarClienteClicked" CommandParameter="{Binding}" />
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>


                    <!-- Empty State -->
                    <Frame x:Name="EmptyStateFrame" BackgroundColor="#3d3d3d" CornerRadius="10" Padding="30" IsVisible="False" HasShadow="True">
                        <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                            <Image Source="id.png" WidthRequest="64"  HeightRequest="64" />
                            <Label Text="No hay clientes registrados" FontSize="18" TextColor="#888888" HorizontalOptions="Center" />
                            <Label Text="Los clientes aparecerán aquí cuando se registren en la aplicación" FontSize="14" TextColor="#666666" HorizontalOptions="Center" HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Frame>

                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>