<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gasolutions.Maui.App.Pages.PerfilPage"
             BackgroundColor="#1e1e1e"
             Title="Perfil">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="ProfileButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#2b2b2b" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <VerticalStackLayout Grid.Row="1" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">
         
            <Frame WidthRequest="120" HeightRequest="120" CornerRadius="60" BackgroundColor="#3a3a3a" Padding="10" HasShadow="False">
                <Image x:Name="PerfilImage" Aspect="AspectFill" />
            </Frame>
            <Label x:Name="NombreLabel"
                   Text="xxx"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />
            <Label x:Name="TelefonoLabel"
                   Text="###"
                   FontSize="16"
                   TextColor="White"
                   HorizontalOptions="Center" />
            <Button Text="EDITAR PERFIL"
                    Style="{StaticResource ProfileButtonStyle}"
                    BackgroundColor="#c0aa4f"
                    TextColor="Black"
                    Clicked="OnEditarPerfilClicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>