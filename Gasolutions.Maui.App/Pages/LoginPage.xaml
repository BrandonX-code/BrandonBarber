<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gasolutions.Maui.App.Pages.LoginPage"
             BackgroundColor="#1e1e1e">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LoginEntryStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="#2b2b2b" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="PlaceholderColor" Value="#909090" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            <Style x:Key="LoginButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#c0aa4f" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            <Style x:Key="RegisterButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor" Value="#c0aa4f" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="20" VerticalOptions="Center">

            <Label Text="Bienvenido" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <VerticalStackLayout Spacing="5">
                <Label Text="Correo electronico" TextColor="White" FontSize="16" />
                <Entry x:Name="EmailEntry" 
                       Style="{StaticResource LoginEntryStyle}" 
                       Placeholder="ejemplo@correo.com"
                       Keyboard="Email" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Contraseña" TextColor="White" FontSize="16" />
                <Entry x:Name="PasswordEntry" 
                       Style="{StaticResource LoginEntryStyle}" 
                       Placeholder="Contraseña"
                       IsPassword="True" />
            </VerticalStackLayout>

            <!-- Bot�n de Iniciar Sesi�n -->
            <Button Text="INICIAR SESION" 
                    Style="{StaticResource LoginButtonStyle}"
                    Clicked="OnLoginClicked" 
                    Margin="0,20,0,0" />

            <!-- Mensaje de error -->
            <Label x:Name="ErrorLabel" 
                   TextColor="#ff0000" 
                   FontSize="14" 
                   HorizontalOptions="Center"
                   IsVisible="False" />

            <!-- Separador -->
            <BoxView HeightRequest="1" 
                     BackgroundColor="#3a3a3a" 
                     Margin="0,20" />

            <!-- Opci�n para registrarse -->
            <VerticalStackLayout Spacing="10">
                <Label Text="No tienes una cuenta?" 
                       TextColor="White" 
                       FontSize="16" 
                       HorizontalOptions="Center" />
                <Button Text="REGISTRARSE" 
                        Style="{StaticResource RegisterButtonStyle}"
                        Clicked="OnRegistroClicked" />
            </VerticalStackLayout>

            <!-- Indicador de actividad -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                              IsRunning="False" 
                              IsVisible="False"
                              Color="#c0aa4f"
                              VerticalOptions="Center"
                              HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>