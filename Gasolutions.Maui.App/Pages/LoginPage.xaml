<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gasolutions.Maui.App.Pages.LoginPage"
             BackgroundColor="#0E2A36" Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LoginEntryStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="#E0F7FA" />
                <Setter Property="TextColor" Value="#0E2A36" />
                <Setter Property="PlaceholderColor" Value="#90A4AE" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="0,5,0,10" />
            </Style>
            <Style x:Key="LoginButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#FF6F91" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
            <Style x:Key="CancelButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#3a3a3a" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontSize" Value="16" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView Padding="30">
        <Grid>
            <VerticalStackLayout Spacing="20" VerticalOptions="Center">
                <Image Source="gentlemen.png" WidthRequest="230" HeightRequest="230" HorizontalOptions="Center" />

                <Label Text="Ingresa tus credenciales" FontSize="14" TextColor="White" HorizontalOptions="Center" />

                <Border BackgroundColor="#E0F7FA" StrokeShape="RoundRectangle 25" StrokeThickness="0"  Padding="0"  HorizontalOptions="Fill">
                    <Grid Padding="12,0" ColumnDefinitions="Auto, *" VerticalOptions="Center">
                        <Image Source="usericons.png"  WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
                        <Entry Grid.Column="1"  x:Name="EmailEntry" TextColor="#0E2A36" Placeholder="Usuario" PlaceholderColor="#90A4AE" FontSize="14" HeightRequest="45" BackgroundColor="Transparent" HorizontalOptions="Fill" VerticalOptions="Center" Keyboard="Email"/>
                    </Grid>
                </Border>
                <Border BackgroundColor="#E0F7FA" StrokeShape="RoundRectangle 25" StrokeThickness="0"  Padding="0"  HorizontalOptions="Fill">
                    <Grid Padding="12,0" ColumnDefinitions="Auto, *" VerticalOptions="Center">
                        <Image Source="lock.png"  WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
                        <Entry Grid.Column="1"  x:Name="PasswordEntry" TextColor="#0E2A36" Placeholder="Contraseña" PlaceholderColor="#90A4AE" FontSize="14" HeightRequest="45" BackgroundColor="Transparent" HorizontalOptions="Fill" VerticalOptions="Center" Keyboard="Password"/>
                    </Grid>
                </Border>
                <Grid Margin="0,20,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Text="Iniciar Sesión"  Style="{StaticResource LoginButtonStyle}" Clicked="OnLoginClicked" HorizontalOptions="Center"/>
                </Grid>


                <Label x:Name="ErrorLabel" TextColor="#FF6F91" FontSize="14" HorizontalOptions="Center" IsVisible="False" />

                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="¿No tienes cuenta?" TextColor="#B0BEC5" FontSize="Body"/>
                    <Label Text=" Registrarse" TextColor="#FF6F91" FontSize="Body" FontAttributes="Bold">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRegistroClicked" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

                <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="White" HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>

    </ScrollView>
</ContentPage>
